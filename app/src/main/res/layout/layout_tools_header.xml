<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bkg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="25dp"
        android:paddingLeft="40dp">
    <LinearLayout
        android:id="@+id/lv_dashituijian"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/dx_toolbox_embeded_icon_dashi_ad"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="大师推荐"
            android:textColor="#2d3e66"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv_ruanjianbibei"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/dx_toolbox_embeded_icon_app_kit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="软件必备"
            android:textColor="#2d3e66"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv_haodianjiance"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="2dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_module_toolbox"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="耗电检测"
            android:textColor="#2d3e66"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv_appcenter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="2dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/dx_toolbox_embeded_icon_app_center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="应用中心"
            android:textColor="#2d3e66"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>